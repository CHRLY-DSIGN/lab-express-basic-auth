<div id="form">
  <h2>Sign-up</h2>

  <form action="/auth/signup" method="POST">

    <label> Username
      <input type="username" name="username" placeholder="PatitoCuack34" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Signup</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
